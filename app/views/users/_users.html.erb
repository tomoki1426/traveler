<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media mb-3"><%= image_tag user.image_name.thumb100.url if user.image_name? %>
        <div class="media-body">
          <div>
            <%= user.name %>
            <%= user.content %>
          </div>
          <div>
            <p><%= link_to 'プロフィール', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>