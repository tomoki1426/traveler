<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark" style="background-color:#008080">
    <a class="navbar-brand" href="/">Traveler</a>
    <ul class ="navbar-nav mr-auto ">
         <% if logged_in? %>
         <li class="nav-item mt-1">
              <%= link_to new_post_path do %>
               <i class="fas fa-pen-square fa-2x"></i>
              <% end %>
          </li>
          <% end %>
    </ul>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
         <% if logged_in? %>
           <li class="nav-item mt-2">  <%= form_with(url: search_users_path, local: true, method: :get, class: "search-form") do |form| %>
                                <%= form.text_field :keyword, placeholder: "ユーザーを検索する", class: "search-input" %>
                                <%= form.submit "検索", class: "search-btn" %>
                                <% end %>
         </li>
          <li class="nav-item"><%= link_to 'Users', users_path, class: 'nav-link' %></li>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"><%= current_user.name %></a>
          <ul class="dropdown-menu dropdown-menu-right">
              <li class="dropdown-item"><%= link_to 'My profile', user_path(current_user) %></li>
               <li class="dropdown-item"><%= link_to 'edit', edit_user_path(current_user) %></li>
              
              <li class="dropdown-divider"></li>
              <li class="dropdown-item"><%= link_to 'Logout', logout_path, method: :delete %></li>
            </ul>
         <% else %>
        <li class="nav-item"><%= link_to 'Signup', signup_path, class: 'nav-link' %></li>
         <li class="nav-item"><%= link_to 'Login', login_path, class: 'nav-link' %></li>
         <% end %>
      </ul>
    </div>
  </nav>
</header>