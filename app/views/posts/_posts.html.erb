<div class ="overflow">
<ul class="list-unstyled">
  <% posts.each do |post| %>
  <div class="card card-body  w-50 mx-auto mb-3 p-0">
    <div class="row m-0">
     <div class ="col-sm-2 text-center p-4">
         <div class ="userprofile">
             <% if post.user.image_name? %>
            <%= image_tag post.user.image_name.thumb100.url %>
            <% else %>
            <%= image_tag 'default.png', :size => '50x50' %>
            <% end %>
         </div> 
         <div class="font-weight-bold align-bottom">
           <%= link_to post.user.name, user_path(post.user) %>
         </div>
      </div>
      <div class="col-sm-10 d-flex align-items-center justify-content-center p-0", id="postimage">
         <style>
            #postimage{
             background-image: url("<%= post.image_name.url %>");
             object-fit: cover;
           }
         </style>
          <p class="font-weight-bold bg-light"> <%= link_to post.title, post_path(post) %></p>
      </div>
    </div>  
    </li>
  </div>  
  <% end %>
  <%= paginate posts %>
</ul>
</div>